view HomeBt:Link{
    content = "Home"
}

view PriceBt:Link{
    content = "Pricing"
    href = "/pricing"
}

view DocBt:Link{
    content = "Documentation"
    href = "/doc"
}

view DashboardBt:Button{
    content = "GitHub repo"
    href = "https://github.com/BuckshotPlusPlus/BuckshotPlusPlus"
}

view MenuTitle:BlackText{
    type = "a"
    href = "/"
    text_decoration = "none"
    display = "inline-block"
    content = "Buckshot++"
    font_family = "'Josefin Sans'"
    font_size = "22px"
    height = "50px"
    line_height = height
    margin_left = "15px"
}

view MenuLinks{
    content = [HomeBt,PriceBt,DocBt,DashboardBt]
    type = "div"
    display = "inline-block"
    float = "right"
    height = MenuTitle.height
    line_height = MenuTitle.height
    display = "flex"
    justify_content = "space-between"
    width = "450px"
}

view Menu{
    type = "nav"
    width = "100%"
    height = MenuTitle.height
    font_family = "'Josefin Sans'"
    box_shadow = "0 5px 10px rgba(20,20,20,0.1)"
    content = [MenuTitle,MenuLinks]
}
